<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#BBBBBB</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="textOfRatings">
        <item name="android:textSize">16dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginBottom">20dp</item>

    </style>
    <style name="textOfThirdLayoutTitle">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#888888</item>

    </style>
    <style name="textOfBigPoints">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#C34508</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

</resources>
